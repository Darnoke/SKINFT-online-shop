<header><div class='distance'>
    <a href="/" class='headButton'>SKINFT</a>
    <% if (!locals.user) { %> <a href='/register' class='headButton'>Register</a> <a href='/login' class='headButton'>Login</a> <% } %>
    <% if (locals.user) { %> <a href='/logout' class='headButton'>Logout</a> <% } %>
    <% if (locals.admin) { %> <a href='/new-item' class='headButton'>Add item</a> <a href='/admin' class='headButton'>Admin page</a> <% } %>

    <% if (locals.user) { %> <%= "Welcome " + user %> <% } %>
    <% if (locals.user && !locals.admin) { %> <button id="buttonOpen">Cart</button> <% } %>
</div></header>


<div id="cart">
    <div id="cartTop">
        <h1 id="h1cart">Cart</h1>
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Available</th>
                <th></th>
            </tr>
            </thead>
            <tbody id='tbody'>

            </tbody>
        </table>
    </div>
    <div id="cartBot">
        <a id='total'></a>
        <button id="buttonClose">Close</button>
        <button id="buttonOrder">Order</button>
    </div>
</div>
<script>
    const close = $('#buttonClose');
    const open = $('#buttonOpen');
    const order = $('#buttonOrder');
    const cart = $('#cart');
    const tbody = $('#tbody');
    const total = $('#total');

    function update() {
        $.get( '/cart', function( data ) {
            tbody.html('');
            let sum = 0;
            for(const item of data) {
                if (item.status) {
                    sum += item.priceUsd;
                }
                tbody.append($('<tr>')
                        .append($('<td>', {
                            text: item.name
                        }))
                        .append($('<td>')
                        .append($('<img>', {
                            class: 'miniThumb',
                            src: 'data:image/png;base64,' + item.thumbnail
                        })))
                        .append($('<td>', {
                            class: 'price-tag',
                            text: 'USD: ' + item.priceUsd + '$'
                        }))
                        .append($('<td>', {
                            text: item.status ? 'yes' : 'no'
                        }))
                        .append($('<td>')
                        .append($('<button>', {
                            text: 'remove'
                        })
                        .click( () => remove(item.name) )
                        )));
            }
            total.html('Total: ' + sum + '$');
        });
    }

    function remove(itemName) {
        $.ajax({
        type: "POST",
        url: "/remove-item/" + itemName,
        data: null,
        success: function(html){ 
                update();
        }
        });
    }

    cart.hide();
    close.click(function () {
        cart.hide('fast');
    });
    open.click(function () {
        cart.show('fast');
    });
    order.click(function () {
        $.ajax({
        type: "POST",
        url: "/place-order",
        data: null,
        success: function(html){ 
                alert(html);
        }
        });
    });
    update();
</script>